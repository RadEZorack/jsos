set $mod Mod4

# Keep sway alive even if shell fails
exec sleep infinity &

exec_always node /usr/local/bin/jsos-launcher.mjs &
exec_always /usr/lib/aarch64-linux-gnu/webkit2gtk-4.1/MiniBrowser /usr/local/share/jsos-shell/index.html

# Terminal
bindsym $mod+Return exec foot

# Exit sway
bindsym $mod+Shift+e exec "swaymsg exit"
