set $mod Mod4

# Keep sway alive even if shell fails
exec sleep infinity &

# Delay browser launch so Wayland + DBus are ready
exec sleep 1 && dbus-run-session -- /usr/lib/aarch64-linux-gnu/webkitgtk-6.0/MiniBrowser /usr/local/share/jsos-shell/index.html

# Terminal
bindsym $mod+Return exec foot

# Exit sway
bindsym $mod+Shift+e exec "swaymsg exit"
